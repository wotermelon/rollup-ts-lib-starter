{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "lib/**/*",
    "types"
  ]
}